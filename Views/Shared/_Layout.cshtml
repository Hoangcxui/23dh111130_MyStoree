<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Store: @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <header class="container" style="background-color: lightgreen;">
            <h4 style="text-align: center; color: green;">
                Free ship đơn từ 40K, giảm nhiều hơn cùng
                <span style="font-weight: bold; font-style: italic; color: blue;">FREESHIP</span>
            </h4>
        </header>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/Images/logo.PNG" style="max-height: 50px;" />
                </a>
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li style="position: relative;"><i class="fas fa-home"></i>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="position: relative;"><i class="fas fa-user"></i>@Html.ActionLink("Account", "Index", "Account")</li>
                    <li style="position: relative;">
                        <i class="fas fa-shopping-cart"></i>
                        @Html.ActionLink("Giỏ hàng", "Index", "Cart")
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="min-height: 500px; margin-top: 50px;">
        @RenderBody()
    </div>

    <div class="navbar">
        <footer class="container modal-footer" style="background-color: lightgray;">
            <div class="navbar-text">
                &copy; @DateTime.Now.Year - Tên ứng dụng
            </div>
            <h4>Contact</h4>
            <p>Tên các thành viên trong nhóm</p>
        </footer>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
     
</body>
</html>

